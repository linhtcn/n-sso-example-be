# Environment
NODE_ENV=development

# Casdoor SSO Configuration
CASDOOR_ENDPOINT=https://sso-npoint.var-meta.com
CASDOOR_CLIENT_ID=your-client-id-from-casdoor
CASDOOR_CLIENT_SECRET=your-client-secret-from-casdoor
CASDOOR_ORGANIZATION_NAME=n-point
CASDOOR_APPLICATION_NAME=n-point-sso-app

# Casdoor Certificate (Public Key for JWT verification)
# Get this from: https://sso-npoint.var-meta.com -> Certs -> Copy the certificate
CASDOOR_CERTIFICATE="-----BEGIN CERTIFICATE-----
Your Certificate Here
-----END CERTIFICATE-----"

# Application Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-random-session-secret-min-32-chars
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Security - CORS
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=info
