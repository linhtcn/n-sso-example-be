# Environment
NODE_ENV=production

# Casdoor SSO Configuration - Production
CASDOOR_ENDPOINT=https://sso-npoint.var-meta.com
CASDOOR_CLIENT_ID=your-production-client-id
CASDOOR_CLIENT_SECRET=your-production-client-secret
CASDOOR_ORGANIZATION_NAME=n-point
CASDOOR_APPLICATION_NAME=n-point-sso-app

# Casdoor Certificate (Public Key for JWT verification)
# Get this from: https://sso-npoint.var-meta.com -> Certs -> Copy the certificate
CASDOOR_CERTIFICATE="-----BEGIN CERTIFICATE-----
Your Production Certificate Here
-----END CERTIFICATE-----"

# Application Configuration - Production
PORT=3001
FRONTEND_URL=https://app-npoint.var-meta.com

# Session Configuration - PRODUCTION
SESSION_SECRET=your-super-secure-random-session-secret-min-32-characters
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Security - CORS Configuration
CORS_ORIGINS=https://app-npoint.var-meta.com

# Logging
LOG_LEVEL=warn
